<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="nortical"
	  fetch="https://gitlab.com/Nortical-UI"
          revision="11-R" />

  <!-- General -->
  <project path="bionic" name="platform_bionic" remote="nortical" /> 
  <project path="art" name="platform_art" remote="nortical" />
  <project path="packages/apps/GCamGOPrebuilt" name="platform_packages_apps_GCamGOPrebuilt" remote="nortical" />
  <project path="libcore" name="platform_libcore" remote="nortical" />

  <!-- Sepolicy -->
  <project path="device/custom/sepolicy" name="platform_device_custom_sepolicy" remote="nortical" />

  <!-- Frameworks -->
  <project path="frameworks/base" name="platform_frameworks_base" remote="nortical" />
  <project path="frameworks/native" name="platform_frameworks_native" remote="nortical" />

  <!-- Build -->
  <project path="build/make" name="platform_build" remote="nortical">
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="platform_build_soong" remote="nortical" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Vendor -->
  <project path="vendor/aosp" name="platform_vendor_aosp" remote="nortical" />
  <project path="vendor/gapps" name="platform_vendor_gapps" remote="nortical" />

  <!-- External -->
  <project path="external/faceunlock" name="platform_external_faceunlock" remote="nortical" />

  <!-- Recovery -->
  <project path="bootable/recovery" name="platform_bootable_recovery" remote="nortical" />

  <!-- Packages -->
  <project path="packages/apps/Settings" name="platform_packages_apps_Settings" remote="nortical" />
  <project path="packages/apps/Updates" name="platform_packages_apps_Updates" remote="nortical" />
  <project path="packages/apps/ThemePicker" name="platform_packages_apps_ThemePicker" remote="nortical" />

  <!-- System -->
  <project path="system/core" name="platform_system_core" remote="nortical" />
  <project path="system/hardware/interfaces" name="platform_system_hardware_interfaces" remote="nortical" />
</manifest>
