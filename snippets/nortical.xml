<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="nortical"
	  revision="12-S"
	  fetch="https://github.com/Nortical-UI/" />
  
  <!-- Device -->
  <project path="device/qcom/sepolicy" name="platform_device_qcom_sepolicy" remote="nortical" />
  <project path="device/qcom/sepolicy_vndr" name="platform_device_qcom_sepolicy_vndr" remote="nortical" />
  <project path="device/qcom/sepolicy-legacy-um" name="platform_device_qcom_sepolicy-legacy-um" remote="nortical" />

  <!-- System Repos -->
  <project path="system/core" name="platform_system_core" remote="nortical" />
  <project path="system/memory/lmkd" name="platform_system_memory_lmkd" remote="nortical" />
  <project path="system/vold" name="platform_system_vold" remote="nortical" />
  <project path="system/sepolicy" name="platform_system_sepolicy" remote="nortical" />

  <!-- Build -->
  <project path="art" name="platform_art" remote="nortical" />
  <project path="bionic" name="platform_bionic" remote="nortical" />
  <project path="build/make" name="platform_build" remote="nortical">
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="platform_build_soong" remote="nortical" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- Vendor -->
  <project path="vendor/nortical" name="platform_vendor_nortical" remote="nortical" />
  <project path="vendor/qcom/opensource/interfaces" name="platform_vendor_qcom_opensource_interfaces" remote="nortical" />
</manifest>
